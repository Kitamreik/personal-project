<%- include('../partials/head') -%> 
<!-- Insert header.ejs -->
<title>Create A Log</title>
<%- include('../partials/admin-nav.ejs') -%> 
<!-- Insert admin-nav.ejs -->

<div class="content-container">
    <section class="content-container-section">
        <h1>Create A Log</h1>
    </section>
    <section class="content-container-2 emerald"> 
        <div class="content-container-3 card mint">
            <form action="/logs" method="POST">
                <legend>
                    <p> Note: This page is to create a new log after a client has reached out. </p>
                    <p> In addition, you can create a new log if it was deleted by mistake. </p>
                </legend>  
                    <br>
                    <fieldset>
                        <label for="firstAndLastName">First and Last Name: </label>
                        <input type="text" name="firstAndLastName" id="firstAndLastName" placeholder="First and Last Name" minlength="6" required />
                    </fieldset>
                    <fieldset>
                        <label for="Email">Email Address: </label>
                        <input type="Email" name="Email" id="Email" placeholder="Email Address" minlength="10" required />
                    </fieldset>
                    <fieldset>
                        <label for="Phone">Phone: </label>
                        <input type="number" name="Phone" id="Phone" placeholder="###########" min="10" required />
                    </fieldset>
                    <fieldset>
                        <label for="Synopsis">Synopsis: </label>
                        <textarea name="Synopsis" id="Synopsis" placeholder="Synopsis" minlength="10" required /> Name of Student Updating Log</textarea>
                    </fieldset>
                    <section class= "center-button">
                        <input type="submit" value="Submit" class="yellow-button link-styling" />
                    </section> 
            </form>
        </div>
    </section>
</div>


<!-- Insert admin-footer.ejs -->
