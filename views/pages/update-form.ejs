<%- include('../partials/head') -%> 
<!-- Insert header.ejs -->
    <title>Update Form</title>
<%- include('../partials/admin-nav') -%> 
<!-- Insert nav.ejs -->
<div class="content-container link-styling">
    <section class="content-container-2 naples-yellow">
        <h1>Update Outreach Form</h1>
    </section>
    <section class="form-container gold-crayola">
        <h2 class = "mini-container">For Trained Admin Usage Only</h2>
        <!-- when making the change, can't PUT, so removing and mocking the outreach form (?_method=PUT)-->
        <form action="/logs/<%= outreach._id%>?_method=PUT" method="POST">
            <legend>
                <p>Entries should only be edited if there has been a client error ONLY.</p>
            </legend>
            <br>
            <fieldset>
                <label for="firstName">First Name:</label>
                <input type="text" name="firstName" id="firstName" value="<%= outreach.firstName %>"/>
            </fieldset>
            <fieldset>
                <label for="lastName">Last Name:</label>
                <input type="text" name="lastName" id="lastName" value="<%= outreach.lastName %>"/>
            </fieldset>
            <fieldset>
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" value="<%= outreach.email %>"/>
            </fieldset>
            <fieldset>
                <label for="phoneNumber">Phone Number</label>
                <input type="number" name="phoneNumber" id="phoneNumber" value="<%= outreach.phoneNumber %>"/>
            </fieldset>
            <fieldset>
                <label for="reason">Reason:</label>
                <input type="text" name="reason" id="reason" value="<%= outreach.reason %>" required/>
            </fieldset>
            
            <section class= "center-button">
                <!-- for disabling the form -->
                <!-- <input type="button" value="In Maintenance" class="block-button"> -->
                <input type="submit" value="Submit" class="yellow-button link-styling" onclick="confirmUpdateData()" />
                <!-- class='blocked-button' onclick="blockedButton() -->
            </section>
        </form>
    </section>
</div>
<!-- Insert footer.ejs -->
