<%- include('../partials/head') -%> 
<!-- Insert header.ejs -->
    <title>Index Page</title>
<%- include('../partials/nav') -%> 
<!-- Insert nav.ejs -->
<div class="content-container link-styling">
    <section class="content-container-section">
        <h1>Outreach Form</h1>
    </section>
    <section class="content-container-section gold-crayola">
        <h2 class = "mini-container">Talk to Us :]</h2>
        <form action="/logs" method="POST" type="text">
            <legend>
                    <p> Note: Responses will be stored and sent out to Practitioners </p>
                    <p> Please wait up to 72 hours for follow up. Thank you :] </p>  
            </legend>
            <br>
            <fieldset>
                <label for="firstName">First Name:</label>
                <input type="text" name="firstName" id="firstName" placeholder="First Name" minlength="2" required/>
            </fieldset>
            <fieldset>
                <label for="lastName">Last Name:</label>
                <input type="text" name="lastName" id="lastName" placeholder="Last Name" minlength="2" required />
            </fieldset>
            <fieldset>
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" placeholder="Email Address" minlength="10" required/>
            </fieldset>
            <fieldset>
                <label for="phoneNumber">Phone Number</label>
                <input type="number" name="phoneNumber" id="phoneNumber" placeholder="Phone Number" minlength="10" required/>
            </fieldset>
            <fieldset>
                <label for="reason">Reason:</label>
                <input type="text" name="reason" id="reason" placeholder="Reason">
            </fieldset>
            <section class= "center-button">
                <input type="submit" value="Submit" class="yellow-button link-styling">
            </section>
        </form>
    </section>
</div>
<!-- Insert footer.ejs -->
<%- include('../partials/footer') -%> 

