<%- include('../partials/head') -%> 
<!-- Insert header.ejs -->
    <title>Login</title>
<%- include('../partials/nav') -%> 
<!-- Insert nav.ejs -->
<div class="content-container">
    <section class="content-container-section">
    <h1>Login Page</h1>
    </section>
    <section class="content-container-2 gold-crayola">
        <form action="/admin" method="post">
            <legend>
                <fieldset>
                    <label for="Username">Username </label>
                    <input type="text" name="Username" id="Username" placeholder="Username" required />
                </fieldset>
                <br>
                <fieldset>
                    <label for="Password">Password</label>
                    <input type="Password" name="Password" id="Password" placeholder="Password" minlength="6" required />
                </fieldset>
                <br>
                <section class= "center-button">
                    <button class="yellow-button link-styling">
                        <a href="/admin" role="button">Submit</a>
                    </button>
                </section>
                <br>
                <section class= "center-button">
                    <button class="yellow-button link-styling">
                        <a href="/auth/google" role="button">Sign In with Google</a>
                    </button>
                </section>
            </legend>
        </form>
    </section>
</div>
