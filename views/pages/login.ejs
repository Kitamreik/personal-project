<%- include('../partials/head') -%> 
<!-- Insert header.ejs -->
    <title>Login</title>
<%- include('../partials/admin-nav') -%> 
<!-- Insert admin-nav.ejs -->
<div class="content-container">
    <section class="content-container-2 naples-yellow">
    <h1>Login Page</h1>
    </section>
    <section class="content-container-2 gold-crayola">
        <p class="bold">Please note that only authorized users (A.P. Students, Teacher Assistants and the Instructor) are allowed to login to this page, for learning purposes.</p>
    </section>
    <section class="content-container-2 gold-crayola">
        <form action="/admin" method="post">
            <legend>
                <fieldset>
                    <label for="Username">Username </label>
                    <input type="text" name="Username" id="Username" placeholder="Username" required />
                </fieldset>
                <br>
                <fieldset>
                    <label for="Password">Password</label>
                    <input type="Password" name="Password" id="Password" placeholder="Password" minlength="6" required />
                </fieldset>
                <!-- add a drop down menu/or input to confirm student user -->
                <br>
                <section class="center-button">
                    <button class="yellow-button link-styling">
                        <a href="/admin" role="button" type="submit"
                        ">Submit</a>
                    </button>
                </section>
                <br>
                <section class= "center-button">
                    <!-- can add class of yellow button when operational -->
                    <button class="yellow-button link-styling">
                        <a href="/auth/google" role="button">Sign In with Google</a>
                    </button>
                    <!-- <button class=" link-styling yellow-button">
                        <a href="/auth/google" role="button">Auth TEST: Sign In with Google</a> 
                    </button> -->
                </section>
            </legend>
        </form>
    </section>
</div>
